<html>
  <head>
    <title>New Period</title>
    <style>
    body {
      background-color: #fffbd6;
      color: #333;
    }
    nav {
      display: flex;
      justify-content: space-between;
      align-items: center;
      background-color: #ffeaf2;
      padding: 10px;
      color: #7b9cff;
    }
    nav a {
      color: #7b9cff;
      text-decoration: none;
      font-size: 18px;
      font-weight: bold;
      padding: 10px;
      transition: all 0.3s ease;
    }
    nav a:hover {
      background-color: #fff;
      color: #333;
      border-radius: 5px;
    }

    h1 {
      color: #ffb170;
    }

    form label {
      color: #7b9cff;
      font-weight: bold;
    }

    form input[type="date"],
    form input[type="number"],
    form textarea,
    form select {
      padding: 8px;
      border-radius: 5px;
      border: none;
      width: 100%;
      margin-bottom: 15px;
      background-color: #cdd6ff;
    }

    form input[type="date"]:focus,
    form input[type="number"]:focus,
    form textarea:focus,
    form select:focus {
      outline: none;
      box-shadow: 0 0 5px #7b9cff;
    }

    form input[type="radio"],
    form input[type="checkbox"] {
      margin-right: 5px;
    }

    form h2,
    form h3 {
      color: #7b9cff;
      margin-top: 25px;
      margin-bottom: 10px;
    }

    form button[type="submit"] {
      background-color: #7b9cff;
      color: #fff;
      border: none;
      padding: 10px 20px;
      border-radius: 5px;
      cursor: pointer;
      transition: all 0.3s ease;
    }

    form button[type="submit"]:hover {
      background-color: #ffeaf2;
      color: #7b9cff;
    }

    form input[type="checkbox"]:checked + label,
    form input[type="radio"]:checked + label {
      font-weight: bold;
      color: #ff8181;
    }

    form input[type="checkbox"]:not(:checked) + label,
    form input[type="radio"]:not(:checked) + label {
      font-weight: normal;
      color: #7b9cff;
    }

    form input[type="text"] {
      padding: 8px;
      border-radius: 5px;
      border: none;
      width: 100%;
      margin-bottom: 15px;
      background-color: #cdd6ff;
    }
  </style>
</head>
  <body>
    <nav>
      <a href="/">Home</a>
      <a href="/periods/new">New Period</a>
    </nav>
    <h1>New Period</h1>
<body>
<form action="/periods" method="POST">
  <label for="startDate">Start Date</label>
  <input type="date" id="startDate" name="period[startDate]" required>

  <label for="endDate">End Date</label>
  <input type="date" id="endDate" name="period[endDate]" required>
  <h2>Symptoms</h2>
  <h3>Flow Level</h3>
  <label>
    <input type="radio" name="period[flowLevel]" value="spotting">
    Spotting
  </label>
  <br>
  <label>
    <input type="radio" name="period[flowLevel]" value="light">
    Light
  </label>
  <br>
  <label>
    <input type="radio" name="period[flowLevel]" value="medium">
    Medium
  </label>
  <label>
    <input type="radio" name="period[flowLevel]" value="heavy">
    Heavy
  </label>
  <br>

  <h3>Cramps</h3>
  <label>
    <input type="radio" name="period[cramps]" value="Light Cramps">
    Light Cramps
  </label>
  <label>
    <input type="radio" name="period[cramps]" value="Heavy Cramps">
    Heavy
  </label>
  <br>
  <h3>Emotional</h3>
  <label>
    <input type="checkbox" name="period[emotional]" value="sad">
    Sad
  </label>
  <br>
  <label>
    <input type="checkbox" name="period[emotional]" value="tearful">
    Tearful
  </label>
  <br>
  <label>
    <input type="checkbox" name="period[emotional]" value="anxious">
    Anxious
  </label>
  <br>
  <label>
    <input type="checkbox" name="period[emotional]" value="angry">
    Angry
  </label>
  <br>
  <label>
    <input type="checkbox" name="period[emotional]" value="frustrated">
    Frustrated
  </label>
  <br>
  <label>
    <input type="checkbox" name="period[emotional]" value="joyful">
    Joyful
  </label>
  <br>
  <label>
    <input type="checkbox" name="period[emotional]" value="peaceful">
    Peaceful
  </label>
  <br>
  <label>
    <input type="checkbox" name="period[emotional]" value="meh">
    Meh
  </label>
  <br> 
  <h3>Physical</h3>
  <label>
    <input type="checkbox" name="period[physical]" value="breast sensitivity">
    Breast Sensitivity
  </label>
  <br>
  <label>
    <input type="checkbox" name="period[physical]" value="back pain">
    Back Pain
  </label>
  <br>
  <label>
    <input type="checkbox" name="period[physical]" value="nausea">
    Nausea
  </label>
  <br>
  <label>
    <input type="checkbox" name="period[physical]" value="bloating">
    Bloating
  </label>
  <br>
  <label>
    <input type="checkbox" name="period[physical]" value="cramps">
    Cramps
  </label>
  <br>
  <label>
    <input type="checkbox" name="period[physical]" value="other">
    Other:
    <input type="text" name="period[otherPhysical]">
  </label>
  <br>

  <h3>Discharge</h3>
  <label>
    <input type="checkbox" name="period[discharge]" value="clear">
    Clear
  </label>
  <br>
  <label>
    <input type="checkbox" name="period[discharge]" value="do not want to answer">
    Do not want to answer
  </label>
  <br>
  <label>
    <input type="checkbox" name="period[discharge]" value="none">
    None
  </label>
  <br>

  <h3>Body Temperature</h3>
  <label>
    <input type="number" name="period[temperature]">
  </label>
  <br>
      <button type="submit">Submit</button>
      <input type="hidden" name="selectedDate" id="selectedDate">
    </form>
  </body>
  </html>
    