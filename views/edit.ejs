    }

    input[type="radio"],
    input[type="checkbox"] {
      margin-right: 5px;
    }

    h2 {
      margin-top: 25px;
      margin-bottom: 10px;
    }

    h3 {
      margin-top: 20px;
      margin-bottom: 10px;
