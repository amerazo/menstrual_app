  /* Additional styling for better visibility */
input[type="date"],
input[type="number"],
textarea,
select {
  padding: 8px;
  border-radius: 5px;
  border: none;
  width: 100%;
  margin-bottom: 15px;
}

input[type="date"]:focus,
input[type="number"]:focus,
textarea:focus,
select:focus {
  outline: none;
  box-shadow: 0 0 5px #7b9cff;
}

textarea {
  height: 150px;
}

button[type="submit"] {
  background-color: #7b9cff;
  color: #fff;
  border: none;
  padding: 10px 20px;
  border-radius: 5px;
  cursor: pointer;
  transition: all 0.3s ease;
}

button[type="submit"]:hover {
  background-color: #ffeaf2;
  color: #7b9cff;
}

footer {
  background-color: #7b9cff;
  color: #fff;
  padding: 10px;
  text-align: center;
  position: fixed;
  bottom: 0;
  width: 100%;
}

</style>
